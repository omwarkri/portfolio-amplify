pipeline {
    agent any

    environment {
        DOCKER_IMAGE = "portfolio-app"
        DOCKER_CONTAINER = "portfolio-container"
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/omwarkri/portfolio-amplify.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh '''
                    echo "üöÄ Building Docker image..."
                    docker build -t $DOCKER_IMAGE .
                '''
            }
        }

        stage('Stop Old Container') {
            steps {
                sh '''
                    echo "üõë Stopping old container if exists..."
                    docker stop $DOCKER_CONTAINER || true
                    docker rm $DOCKER_CONTAINER || true
                '''
            }
        }

        stage('Run New Container') {
            steps {
                sh '''
                    echo "‚ñ∂Ô∏è Starting new container..."
                    docker run -d -p 3000:3000 --name $DOCKER_CONTAINER $DOCKER_IMAGE
                '''
            }
        }
    }

    post {
        success {
            echo "‚úÖ Deployment successful! Open: http://<192.168.153.131>:3000"
        }
        failure {
            echo "‚ùå Deployment failed. Check logs in Jenkins console."
        }
    }
}
